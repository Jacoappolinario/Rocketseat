{% extends "layout.njk" %}

{% block content %}
    <section class="cards">
        {% for course in courses %}
        <div class="card" id="{{ course.id }}">
            <div class="card__image">
                <img src="https://storage.googleapis.com/golden-wind/bootcamp-launchbase/assets/{{ course.image }}" alt="">
            </div>
            
            <div class="card__content">
                <p>{{ course.content }}</p>
            </div>
        </div>
        {% endfor %}
    </section>
{% endblock content %}