{% extends "layout.njk" %}

{% block content %}
<div class="container">
    <section class="cards">
        {% for course in courses %}
        <div class="card" id="{{ course.name }}">
            <div class="card__image">
                <img src="{{ course.image }}" alt="">
            </div>
            
            <div class="card__content">
                <p>{{ course.content }}</p>
            </div>
        </div>
        {% endfor %}
    </section>
</div>
{% endblock content %}